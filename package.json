{
  "name": "express-master-controller",
  "version": "1.0.21",
  "description": "Master Controller with automated swagger docs creation for node express app",
  "main": "dist/cjs/src/index.js",
  "types": "dist/types/src/index.d.ts",
  "module": "dist/esm/src/index.js",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Thre4dripper/express-master-controller.git"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/src/index.js",
      "require": "./dist/cjs/src/index.js"
    }
  },
  "scripts": {
    "transpile": "tsc --project tsconfig.esm.json & tsc --project tsconfig.cjs.json & tsc --project tsconfig.types.json",
    "fix": "tsc-esm-fix --src='dist/esm/src/**/*.js' --ext='.js'",
    "build": "yarn transpile && yarn fix",
    "start": "ts-node src/index.ts"
  },
  "keywords": [
    "Node",
    "Express",
    "Typescript",
    "Swagger",
    "Master-Controller",
    "Joi"
  ],
  "author": "Ijlal Ahmad",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "joi": "^17.11.0",
    "joi-to-swagger": "^6.2.0",
    "reflect-metadata": "^0.2.1",
    "socket.io": "^4.7.2",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/swagger-ui-express": "^4.1.6",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "tsc-esm-fix": "^2.20.21",
    "typescript": "^5.3.3"
  }
}
